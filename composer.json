        "typo3/imagine": "@dev",
        "typo3/media": "@dev",
        "typo3/twitter-bootstrap": "@dev",
        "typo3/form": "@dev",
        "typo3/setup": "@dev",
        "typo3/typo3cr": "@dev",
        "typo3/typoscript": "@dev"
